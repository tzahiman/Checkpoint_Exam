aws_region   = "us-west-1"
environment  = "prod"
project_name = "devops-exam"

# ECS Configuration
api_service_cpu    = 256
api_service_memory = 512
sqs_consumer_cpu   = 256
sqs_consumer_memory = 512

# Application Configuration
api_service_port  = 8000
sqs_poll_interval = 30

# API auth: generated by Terraform (random_password) and stored in SSM; retrieve with: terraform output -raw api_auth_value

enable_monitoring = true
